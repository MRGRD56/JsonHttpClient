<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net5.0;netstandard2.0;netstandard2.1</TargetFrameworks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>MRGRD56.JsonHttpClient</PackageId>
        <Title>HttpClient extension methods for easy work with JSON</Title>
        <Authors>MRGRD56</Authors>
        <PackageProjectUrl>https://github.com/MRGRD56/JsonHttpClient</PackageProjectUrl>
        <RepositoryUrl>https://github.com/MRGRD56/JsonHttpClient</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    </ItemGroup>

</Project>
